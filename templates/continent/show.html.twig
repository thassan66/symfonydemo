<style>
    th, td {
        padding: 5px;
    }

    th {
        text-align: center;
    }

</style>

<h1 style="text-align: center">All Continents</h1>

{% block body %}

    <table class="table table-hover table-responsive" border="1px" align="center">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th colspan="2">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for continent in continents %}
            <tr>
                <td> {{ continent.id }} </td>
                <td> {{ continent.name }} </td>
                <td><a href="delete/{{ continent.id }}">Delete</a></td>
                <td><a href="update/{{ continent.id }}">Update</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation" align="center">
        {{ knp_pagination_render(continents) }}
    </div>

    <div align="center">
        <a href="/continent/new">Add New Continent</a>
    </div>
{% endblock %}
